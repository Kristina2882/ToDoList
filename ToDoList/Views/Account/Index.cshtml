@{
    Layout = "_Layout";
}

<h2><b>Authentication with Identity</b></h2>

@if (User.Identity.IsAuthenticated)
{
    <h4>Hello, @User.Identity.Name:))</h4>
    @using (Html.BeginForm("LogOff", "Account"))
    {
        <input type="submit" value="Log out"/>
    }
}

else
{
    <h5>@Html.ActionLink("Register", "Register")
         @Html.ActionLink("Log in", "Login")</h5>
}

<hr/>

<h6>@Html.ActionLink("Home", "Index", "Home")</h6>
