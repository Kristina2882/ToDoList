@{
    Layout = "_Layout";
}

@model ToDoList.Models.Tag

<h2><b>Add a To-do</b></h2>

<h3>Add a To-do to the tag @Html.DisplayFor(model => model.Title)</h3>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)
    @Html.Label("Select To-do")
    @Html.DropDownList("ItemId")

    <input type="submit" value="Save"/>
}

<hr/>
<h6>@Html.ActionLink("Back to the list", "Index")</h6>

