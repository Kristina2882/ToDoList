@{
    Layout = "_Layout";
}

@using ToDoList.Models;

<h2><b>Categories</b></h2>

@if (Model.Count == 0)
{
    <h3>There are no categories in your list yet!</h3>
}

<ul>
@foreach(Category category in Model)
{
        <h3>@Html.ActionLink($"{category.Name}", "Details", new {id = category.CategoryId})</h3>
    
}
</ul>

<hr/>
<h6>@Html.ActionLink("Add new category", "Create")
@Html.ActionLink("Home", "Index", "Home")</h6>
