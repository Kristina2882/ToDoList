@{
    Layout = "_Layout";
}

@using ToDoList.Models;

<h2><b>To-Dos for @User.Identity.Name</b></h2>

@if (Model.Count == 0)
{
    <h3>There are no To-dos in your list yet!</h3>
}
else
{
@foreach(Item item in Model)
{
    @if (item.IsDone == true)
    {
        <h3> <img src="~/img/checked_input_icon.png" /> @Html.ActionLink($"{item.Description}", "Details", new {id = item.ItemId}) | @item.Category.Name  </h3>
    }
    else
    {
        <h4>@Html.ActionLink($"{item.Description}", "Details", new {id = item.ItemId}) | @item.Category.Name </h4>
    
    }
        
}
}

<hr/>

<h6>@Html.ActionLink("Add new To-do", "Create")
    @Html.ActionLink("Home", "Index", "Home")</h6>

