@{
    Layout = "_Layout";
}
@using ToDoList.Models

<h2><b>Tags</b></h2>

@if(Model.Count == 0)
{
    <h3>There aren't any tags now!</h3>
}

@foreach(Tag tag in Model)
{
    <h3>@Html.ActionLink($"{tag.Title}", "Details", new {id = tag.TagId})</h3>
}
<hr/>

<h6>@Html.ActionLink("Create new tag", "Create")
@Html.ActionLink("Home", "Index", "Home")</h6>